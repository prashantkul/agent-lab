# Database (Railway provides this)
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Google OAuth (for user sign-in)
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxx
GOOGLE_REDIRECT_URI=https://yourapp.up.railway.app/auth/google/callback

# Google Drive (Service Account JSON - single line)
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Email (Resend)
RESEND_API_KEY=re_xxx
FROM_EMAIL=reviews@yourdomain.com
ADMIN_EMAIL=admin@example.com

# Slack (optional) - Get webhook URL from https://api.slack.com/apps
SLACK_WEBHOOK_URL=your-slack-webhook-url-here

# App Config
SECRET_KEY=generate-a-long-random-string
APP_URL=https://yourapp.up.railway.app
ADMIN_EMAILS=admin@example.com
